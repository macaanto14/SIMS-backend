{
  "name": "sims-backend-api",
  "version": "2.0.0",
  "description": "School Information Management System - Backend API",
  "main": "src/app.js",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t sims-backend .",
    "docker:run": "docker run -p 3000:3000 sims-backend",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:postman": "node scripts/generate-postman.js",
    "docs:serve": "npm start",
    "docs:build": "npm run docs:generate && npm run docs:postman",
    "docs:watch": "nodemon --watch src --watch routes --watch controllers --exec \"npm run docs:generate\"",
    "docs:deploy": "npm run docs:build && npm run deploy:docs",
    "docs:check": "node scripts/check-docs.js",
    "email:setup": "node scripts/setup-email-system.js",
    "email:test": "node scripts/test-email-system.js"
  },
  "keywords": [
    "school-management",
    "education",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "swagger",
    "documentation"
  ],
  "author": "SIMS Development Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^6.9.8",
    "pg": "^8.16.3",
    "rate-limit-redis": "^4.2.1",
    "redis": "^4.7.1",
    "redoc-express": "^2.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3"
  }
}
