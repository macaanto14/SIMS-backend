# Server Configuration
NODE_ENV=development
PORT=3000
APP_VERSION=2.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sims_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sims_db
DB_USER=sims_user
DB_PASSWORD=your_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@sims.com
SMTP_REPLY_TO=support@sims.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3001

# Test Email (for testing email functionality)
TEST_EMAIL=your_test_email@example.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# External Services (Optional)
REDIS_URL=redis://localhost:6379
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=sims-uploads